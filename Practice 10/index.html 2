        }
        /* 1 Slider-down animation for the nav */
        @keyframes solidcolor {
            0% {transform: translateY(-100%);}
            100% {transform: translateY(0);}
        }

        /* 2 Top Navigation Bar */
        nav {
            position: fixed;
            top: 0; left: 0; right: 0;
            background: #2c3e50;
            animation-name: slideDown;
            animation-duration: 0.5s;
            animation-timing-function: ease-out;
            z-index: 1000;
        }

        nav ul {
            display: flex;
            justify-content: center;
            list-style: none;
            padding: 1rem;
        }

        nav li {
            margin: 0 1.5rem;
            position: relative; /* for underline pseudo-element*/
        }

        nav a {
            color: #ecf0f1;
            text-decoration: none;
            font-size: 1rem;
            padding: 0.25rem 0;
            transition: color 0.3s ease;
        }

        nav a:hover {
            color: #1abc9c;
        }

        /* 3 Sliding underline effect */
        nav a::after {
            content: "";
            position: absolute;
            left: 0; bottom: -4px;
            width: 0; height: 2px;
            background: #1abc9c;
            transition: width 0.3s ease;
        }

        nav a:hover::after {
            width: 100%;
        }

        /* 4 Page content to demonstrate fixed nav */
        main {
            padding: 6rem 2rem 2rem; /* top padding to clear fixed nav */ 
        }

        .section {
