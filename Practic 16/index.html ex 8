            background: url("https://picsum.photos/1400/900") center/cover;

            /* Mask Gradient */
            -webkit-mask-image: linear-gradient(to button, black 70%, transparent);
            mask-image: linear-gradient(to bottom, black 70%, transparent);

            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .hero-content {
            max-width: 600px;
        }

        /* Text Mask */
        .hero h1 {
            font-size: 80px;
            margin-bottom: 20px;

            background: url("https://picsum.photos/800") center/cover;
            color: transparent;

            -webkit-background-clip: text;
            background-clip: text;
        }

        .hero p {
            font-size: 18px;
            opacity: 0.8;
        }

        .hero button {
            margin-top: 30px;
